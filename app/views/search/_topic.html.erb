<% if item %>
<%
title = item.title
%>
<div class="result">
  <div class="title">
    <%= link_to highlight(title, terms: @search.terms), item %>
    <% if item.excellent? %>
      <i title="" class="fa fa-award" data-toggle="tooltip" data-original-title="精华帖"></i>
    <% end %>
  </div>
  <div class="info">
    <span class="url"><%= link_to polymorphic_url(item), item %></span>
    <span class="date" title="Last Updated At"><%= item.created_at.to_date %></span>
  </div>
  <div class="desc"><%= highlight(hit.hit_content, terms: @search.terms) %></div>
</div>
<% end %>